section .data
msg0 db 	'Digite seu nome: ',0
tammsg0 	EQU 17
msg1 db 	'Hola, ',0
tammsg1		EQU 6
msg2 db 	'. bem-vindo ao programa de CALC IA-32',0
tammsg2		EQU 37
msg3 db 	'Escolha uma opcao: 1-soma, 2-subtracao, 3-multiplicacao, 4-divisao, 5-mod, 6-sair',0
tammsg3		EQU 81
msg4 db		'Digite primeiro operando: '
tammsg4		EQU 26
msg5 db		'Digite segundo operando: '
tammsg5		EQU 25


section .bss
nome resb 40
opcao resb 2
operador1 resb 2
operador2 resb 2
resposta resb 4
resto resb 2
tamnome EQU $-nome


section .text
global _start
_start:
	mov eax,4 ;printa solicitacao de nome
	mov ebx,1
	mov ecx,msg0
	mov edx,tammsg0
	int 80h
	
	mov eax,3 ;pega o nome
	mov ebx,0
	mov ecx,nome
	mov edx,tamnome
	int 80h
	
	mov eax,4 ;printa mensagem de hola
	mov ebx,1
	mov ecx,msg1
	mov edx,tammsg1
	int 80h
	
	mov eax,4 ;printa o nome
	mov ebx,1
	mov ecx,name
	mov edx,tamnome
	int 80h
	
	mov eax,4 ;printa mensagem de boas vindas
	mov ebx,1
	mov ecx,msg2
	mov edx,tammsg2
	int 80h
	
	mov eax,4 ;printa menu
	mov ebx,1
	mov ecx,msg3
	mov edx,tammsg3
	int 80h
	
	mov eax,3 ;pega opcao do menu
	mov ebx,0
	mov ecx,opcao
	mov edx,2
	int 80h
	
	mov ecx,0 ;converte opcao de ascii para numero
	mov CL,[opcao]
	sub CL,0x30
	
	;if opcao ==6, jump para exit
	
	;else
	
	mov eax,4 ;printa solicitacao de operando1
	mov ebx,1
	mov ecx,msg4
	mov edx,tammsg4
	int 80h
	
	mov eax,3 ;pega operando1
	mov ebx,0
	mov ecx,operando1
	mov edx,2
	int 80h
	
	mov eax,4 ;printa solicitacao de operando2
	mov ebx,1
	mov ecx,msg5
	mov edx,tammsg5
	int 80h
	
	mov eax,3 ;pega operando2
	mov ebx,0
	mov ecx,operando2
	mov edx,2
	int 80h
